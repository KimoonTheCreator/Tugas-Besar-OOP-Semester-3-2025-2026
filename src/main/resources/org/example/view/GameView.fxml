<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?> <?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="gameRoot" 
            fx:controller="org.example.controller.GameController" 
            xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/21">

    <BorderPane AnchorPane.topAnchor="0.0" 
                AnchorPane.rightAnchor="0.0" 
                AnchorPane.bottomAnchor="0.0" 
                AnchorPane.leftAnchor="0.0">

        <left>
            <VBox fx:id="ordersContainer" spacing="10" alignment="TOP_CENTER" style="-fx-padding: 10; -fx-background-color: rgba(0,0,0,0.5);" prefWidth="200.0">
                <!-- Orders will be added here dynamically -->
            </VBox>
        </left>

        <center>
            <GridPane fx:id="mapGrid" 
                      alignment="CENTER" 
                      style="-fx-background-color: #303030;">
                <padding>
                    <Insets top="5.0" right="5.0" bottom="5.0" left="5.0" />
                </padding>
            </GridPane>
        </center>

        <bottom>
            <VBox spacing="5" style="-fx-background-color: #1a1a1a; -fx-padding: 10;">
                <HBox spacing="40">
                    <Label fx:id="chefInfoLabel" text="Chef: [Nama Chef] (1/2)" 
                            style="-fx-text-fill: yellow;">
                        <font>
                            <Font name="Consolas Bold" size="14.0" />
                        </font>
                    </Label>
                    
                    <Label fx:id="scoreLabel" text="Score: 0" 
                            style="-fx-text-fill: limegreen;">
                        <font>
                            <Font name="Consolas Bold" size="14.0" />
                        </font>
                    </Label>
                </HBox>

                <HBox spacing="20">
                    <Label fx:id="positionInfoLabel" text="Position: (0, 0) | Facing: DOWN" 
                            style="-fx-text-fill: white;">
                        <font>
                            <Font name="Consolas" size="12.0" />
                        </font>
                    </Label>
                    
                    <Label text="Item: None" 
                            style="-fx-text-fill: white;">
                        <font>
                            <Font name="Consolas" size="12.0" />
                        </font>
                    </Label>
                </HBox>

                <Label text="WASD=Move | TAB=Switch | V=Interact | F=Pickup | ESC=Exit" 
                        style="-fx-text-fill: #999999;">
                    <font>
                        <Font name="Consolas" size="11.0" />
                    </font>
                </Label>
            </VBox>
        </bottom>
    </BorderPane>
</AnchorPane>