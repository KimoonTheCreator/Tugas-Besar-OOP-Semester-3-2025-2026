<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane fx:controller="org.example.controller.MainMenuController"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21"
            prefHeight="600.0" prefWidth="700.0">

    <ImageView fx:id="backgroundView" fitHeight="600.0" fitWidth="700.0" />

    <ImageView fx:id="titleView" layoutX="0" layoutY="75.0" fitWidth="700.0" preserveRatio="true"/>

    <VBox alignment="CENTER" spacing="20.0" 
          AnchorPane.topAnchor="250.0" 
          AnchorPane.bottomAnchor="100.0" 
          AnchorPane.leftAnchor="250.0"
          AnchorPane.rightAnchor="250.0">

        <ImageView fx:id="playButtonView"
                   onMouseClicked="#handlePlayButton"
                   styleClass="menu-button"
        /> 


        <ImageView fx:id="tutorialButtonView"
                   onMouseClicked="#handleTutorialButton"
                   styleClass="menu-button"
        /> 

        <ImageView fx:id="quitButtonView"
                   onMouseClicked="#handleQuitButton"
                   styleClass="menu-button"
        /> 
    </VBox>

    <!-- LEVEL SELECT POPUP OVERLAY -->
    <StackPane fx:id="levelSelectPane" visible="false" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" style="-fx-background-color: rgba(0,0,0,0.75);">
         <AnchorPane maxWidth="450" maxHeight="350">
              <ImageView fitWidth="450" fitHeight="350" preserveRatio="false">
                    <image>
                        <javafx.scene.image.Image url="@../../../../res/ui/menu_popup.png"/>
                    </image>
              </ImageView>
              
              <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="60.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
                    <ImageView fx:id="difficultyTitleView" 
                               fitWidth="300.0" 
                               preserveRatio="true"/>
                    
                    <ImageView fx:id="easyButtonView" 
                            onMouseClicked="#handleEasyButton"
                            fitWidth="180.0" preserveRatio="true"
                            style="-fx-cursor: hand;"/>
                    
                    <ImageView fx:id="mediumButtonView" 
                            onMouseClicked="#handleMediumButton"
                            fitWidth="180.0" preserveRatio="true"
                            style="-fx-cursor: hand;"/>

                    <ImageView fx:id="hardButtonView" 
                            onMouseClicked="#handleHardButton"
                            fitWidth="180.0" preserveRatio="true"
                            style="-fx-cursor: hand;"/>
                    
                    <Button fx:id="backButton" text="BACK" prefWidth="120.0" style="-fx-background-color: transparent; -fx-text-fill: #FDEDBC; -fx-font-weight: bold; -fx-underline: true; -fx-cursor: hand;"/>
              </VBox>
         </AnchorPane>
    </StackPane>
</AnchorPane>