<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="stageOverRoot" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="org.example.controller.StageOverController"
            style="-fx-background-color: rgba(0, 0, 0, 0.75);" 
            prefHeight="600.0" prefWidth="700.0">

    <StackPane AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0" 
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">

        <AnchorPane maxWidth="450.0" maxHeight="500.0"> 
            
            <ImageView fx:id="popupBackgroundView" fitWidth="450.0" fitHeight="500.0">
                 <image>
                    <Image url="@../../../../res/ui/menu_popup.png"/> 
                </image>
            </ImageView>

            <VBox alignment="CENTER" spacing="10.0" 
                  AnchorPane.topAnchor="50.0" 
                  AnchorPane.bottomAnchor="30.0" 
                  AnchorPane.leftAnchor="50.0"
                  AnchorPane.rightAnchor="50.0">
        
                <ImageView fx:id="titleImageView" 
                           fitWidth="300.0" 
                           preserveRatio="true"/> 
                
                <Label fx:id="reasonLabel" text="[Reason/Alasan]" textFill="#FFCC00" wrapText="true">
                    <font><Font name="System Bold" size="18.0" /></font>
                </Label>

                <Label fx:id="scoreLabel" text="Final Score: 0 / 0 (minimum)" textFill="#FFFFFF">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                
                <Label fx:id="statusLabel" text="[Status Message]" textFill="#AAAAAA" wrapText="true" maxWidth="300.0" alignment="CENTER">
                    <font><Font size="14.0" /></font>
                </Label>
                
                <VBox prefHeight="10.0" />

                <ImageView fx:id="restartButtonView"
                           onMouseClicked="#handleRestart"
                           fitWidth="200.0" preserveRatio="true"
                           style="-fx-cursor: hand;"/>
                           
                
                <ImageView fx:id="mainMenuButtonView"
                           onMouseClicked="#handleMainMenu"
                           fitWidth="200.0" preserveRatio="true"
                           style="-fx-cursor: hand;"/>

            </VBox>
        </AnchorPane>
    </StackPane>
</AnchorPane>