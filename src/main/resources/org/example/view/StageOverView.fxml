<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="stageOverRoot" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="org.example.controller.StageOverController"
            style="-fx-background-color: rgba(50, 0, 0, 0.9);" 
            prefHeight="600.0" prefWidth="700.0">

    <!-- Background Image -->
    <ImageView fx:id="backgroundView" 
               fitHeight="600.0" 
               fitWidth="700.0" 
               AnchorPane.topAnchor="0.0" 
               AnchorPane.rightAnchor="0.0" 
               AnchorPane.bottomAnchor="0.0" 
               AnchorPane.leftAnchor="0.0"
               opacity="0.5"/>

    <VBox alignment="CENTER" spacing="15.0" 
          AnchorPane.topAnchor="80.0" 
          AnchorPane.bottomAnchor="80.0" 
          AnchorPane.leftAnchor="100.0"
          AnchorPane.rightAnchor="100.0">

        <!-- Title (PASSED / FAILED) -->
        <Label fx:id="titleLabel" text="STAGE OVER" textFill="#FFFFFF">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>

        <!-- Reason (TIME'S UP / TOO MANY FAILS) -->
        <Label fx:id="reasonLabel" text="" textFill="#FFCC00">
             <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- Score Display -->
        <Label fx:id="scoreLabel" text="Final Score: 0" textFill="#FFFFFF">
             <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Status Message -->
        <Label fx:id="statusLabel" text="" textFill="#AAAAAA" wrapText="true" maxWidth="400.0" alignment="CENTER">
             <font>
                <Font size="14.0" />
            </font>
        </Label>
        
        <!-- Spacer -->
        <VBox prefHeight="20.0" />

        <!-- Buttons -->
        <!-- Restart Button -->
        <ImageView fx:id="restartButtonView"
                   pickOnBounds="true"
                   preserveRatio="true"
                   fitWidth="180.0"
                   onMouseClicked="#handleRestart"
                   style="-fx-cursor: hand;"/>
        
        <Label text="ðŸ”„ PLAY AGAIN" textFill="WHITE">
            <font><Font size="14.0"/></font>
        </Label>

        <!-- Main Menu Button -->
        <ImageView fx:id="mainMenuButtonView"
                   pickOnBounds="true"
                   preserveRatio="true"
                   fitWidth="180.0"
                   onMouseClicked="#handleMainMenu"
                   style="-fx-cursor: hand;"/>
                   
        <Label text="ðŸ  MAIN MENU" textFill="WHITE">
             <font><Font size="14.0"/></font>
        </Label>

    </VBox>
</AnchorPane>
